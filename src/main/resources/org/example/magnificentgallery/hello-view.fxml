<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextInputControl?>
<?import javafx.scene.control.TextInputDialog?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.magnificentgallery.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="welcomeText" text="LOGIN" style="-fx-font-size: 50px; -fx-font-family: 'Arial Rounded MT Bold';"/>
  <TextField fx:id="inputEmail" promptText="Email" visible="true" prefHeight="50" maxWidth="500" style=" -fx-tile-alignment: center"/>


  <ImageView  fx:id="imageView" fitWidth="0" fitHeight="0" visible="false">
    <Image fx:id="image"  url="@../../../../../images/Screenshot.png" />
  </ImageView>

  <Button fx:id="loginButton" text="Login" onAction="#onClickLoginButton" visible="true"/>
  <Button fx:id="cartButton" text="GoToCart" onAction="#onClickCartButton" visible="false"/>
  <Button fx:id="nextButton" text="Next" onAction="#goNextButtonClick" visible="false" />
  <Button fx:id="backButton" text="Back" onAction="#goBackButtonClick" visible="false"/>
</VBox>
